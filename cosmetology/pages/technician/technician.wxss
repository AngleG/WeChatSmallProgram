/* pages/technician/technician.wxss */
.container{
  margin: 0;
  padding: 0;
}
.ar_picker{
  width: 100%;
  font-size: 30rpx;
  color: #000;
  margin: 0;
  padding: 10rpx 0rpx;
}
.ar_picker .ar_picker_wrap{
  width: 670rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
  margin: 10rpx auto;
  border: 1px solid #ddd;
}
.list_section{
  width: 100%;
}
.list_section_items{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 2rpx solid #ddd;
  position: relative;  
}
.list_section_items:active{
  background: #eee;
}
.list_section_items .section_image{
  width: 170rpx;
  height: 158rpx;
}
.list_section_items .section_image image{
  width: 100%;
  height: 100%;
}
.list_section_items .section_cont{
  width: 380rpx;
  font-size: 26rpx;
  color: #a9a9a9;
}
.list_section_items .section_cont_sub{
  color: #000;
  font-size: 30rpx;
  line-height: 60rpx;
  margin-bottom: 10rpx;
}
.list_section_items .section_cont_price{
  color: #d24a58;
  font-size: 32rpx;
}
.list_section_items .section_cont view{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}
.list_section_items .section_distance{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #d24a58;
  text-align: left;
  margin-top: 35rpx;
  padding-left: 30rpx;
  background: url('data:image/png;base64,') no-repeat left;
  background-size: 17rpx 28rpx;
}
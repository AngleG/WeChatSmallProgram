/* pages/user/user.wxss */
.container{
  margin: 0;
  padding: 0;
}
.user_head_info{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 80rpx 0;
  font-size: 30rpx;

}
.user_head{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  margin-right: 60rpx;
}
.user_head image{
  width: 100%;
  height: 100%;
}
.user_info{
  line-height: 48rpx;
}
.user_addr_manage{
  width: 100%;
}
.user_addr_title{
  text-align: center;
  font-size: 36rpx;
  margin-bottom: 40rpx;
}
.user_addr_item{
  width: 100%;
  font-size: 30rpx;
  line-height: 48rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  border-bottom: 1px solid #ddd;
  padding: 10rpx 40rpx;
  box-sizing: border-box;
  vertical-align: middle;
  position: relative;
}
.user_addr_item .addr_sub{
  width: 580rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.user_addr_item .addr_edit{
  width: 46rpx;
  background: url('data:image/png;base64,') no-repeat center;
  background-size: 100%;
}
navigator{
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #ddd;
  font-size: 32rpx;
  color: #d24a58;
}
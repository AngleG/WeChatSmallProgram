/* pages/book/book.wxss */
.container{
  width: 100%;
  background: #fff;
}
.book_banner{
  width: 100%;
  margin: 0;
  padding: 0;
  height: 175px;
}
.book_banner image{
  width: 100%;
  height: 100%;
}
.book_picker{
  width: 100%;
  background: #efeff4;
  color: #000;
  font-size: 30rpx;
  margin: 0;
}
.book_picker_wrap{
  width: 670rpx;
  background: #fff url('data:image/png;base64,') no-repeat right center; 
  background-size: 25rpx 14rpx;
  background-position: 650rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  margin: 20rpx auto;
}
.book_cont{
  padding: 20rpx 60rpx;
  color: #666;
  font-size: 30rpx;
  line-height: 45rpx;
}
.book_cont .book_title{
  font-size: 32rpx;
  color: #000;
  font-weight: 600;
  line-height: 64rpx;
}
.book_date_time{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 30rpx 0rpx 60rpx;
}
.book_date_time .book_date,.book_date_time .book_time{
  width: 47%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.book_date_time .book_date image{
  width: 34rpx;
  height: 38rpx;
}
.book_date_time .book_time image{
  height: 40rpx;
  width: 45rpx;
}
.book_date_time picker{
  width: 220rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0rpx 10rpx;
  margin-left: 10rpx;
}
.input_msg{
  border-radius: 8rpx;
  border: 1px solid #ddd;
  padding:0rpx 10rpx;
}
.book_btn{
  background:#d24a58;
  font-size: 32rpx;
  color: #fff;
   border-radius: 0rpx; 
  margin: 40rpx 0rpx 10rpx;
}
/* pages/detail/detail.wxss */
.detail_banner{
  width: 100%;
  margin: 0;
}
.detail_banner image{
  width: 100%;
  height: 390rpx;
}
.detail_content{
  padding: 0rpx 60rpx;
  margin-bottom: 40rpx;
  font-size: 30rpx;
  background: #fff;
  line-height: 45rpx;
  color: #666;
}
.detail_content .detail_title,.detail_content .detail_price{
  font-size: 32rpx;
  color: #000;
  font-weight: 600;
  line-height: 64rpx;
}
.detail_content .detail_price{
  color: #e64340;
  margin-left: 60rpx;
}
.detail_content .text_justify{
  text-align: justify;
}
.detail_line{
  display: block;
  width: 100%;
  height: 2rpx;
  background: #ddd;
  content: '';
  margin: 30rpx 0rpx;
}
.detail_book{
  background: #d24a58;
  color: #fff;
  font-size: 32rpx;
  border-radius: 0;
  margin: 40rpx 0 10rpx;
}
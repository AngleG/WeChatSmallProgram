/**index.wxss**/
page{
  background: #eee;
}
.swiper{
  width: 100%;
  margin: 0;
}
.swiper image{
  display: inline;
}
.nav-list{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 30rpx 10rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 4rpx;
}
.nav-list-item{
  text-align: center;
  font-size: 28rpx;
  width: 150rpx;
}
.nav-list-item image{
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
}
.nav-list-item text{
  display: inline-block;
}
.active0{
  color: #75dfd5;
}
.active1{
  color: #ff5e45;
}
.active2{
  color: #4093c1;
}
.active3{
  color: #ff5a93;
}

.product{
  background: #eee;
  /* padding-left: 10rpx; */
  box-sizing: border-box;
}

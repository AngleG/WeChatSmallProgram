.product-list-items{
   /* width: 50%;  */
  width: 49.5%; 
  background: #fff;
   /* border: 1px solid #eee;  */
  margin-bottom: 5rpx; 
  float: left; 
}
 .product-list-items:nth-child(odd){
  margin-right: 1%;
} 
.product-list-items .pic{
  width: 100%;
  height: 400rpx;
}
.product-list-items .pic:active{
  opacity: 0.8;
}
.product-list-items image{
  width: 100%;
  height: 100%;
}
.product-list-items .product-info{
  font-size: 30rpx;
  color: #333;
  padding: 10rpx 20rpx;
  position: relative;
}
.product-list-items .product-info text{
  display: block;
  line-height: 46rpx;
}
.product-list-items .product-info .price{
  color: #ff5e45;
}
.product-list-items .product-info .car{
  position: absolute;
  bottom: 0rpx;
  right: 10rpx;
  width: 80rpx;
  height: 80rpx;
}
.product-list-items .product-info .title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
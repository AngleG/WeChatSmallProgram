/* pages/shoppingcart/shoppingcart.wxss */
scroll-view{
  padding-bottom: 90rpx;
}
page{
  background: #f0f4f5;
}

.product-list-items{
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #fff;
  margin-bottom: 8rpx;
}
.product-list-items.delete{
  display: none;
}
.product-list label{
  padding-top: 50rpx;
  text-align: left;
  margin-right: 20rpx;
}
.product-list label checkbox{
  transform: scale(0.7);
}
.product-list .product-img{
  width: 180rpx;
  height: 180rpx;
  margin-right:15rpx;
}
.product-list .product-img image{
  width: 100%;
}
.product-info-list{
  padding-top: 20rpx;
  width: 290rpx;
  text-align: left;
}
.product-info-list text{
  display: block;
  font-size: 30rpx;
  line-height: 46rpx;
}
.product-info-list .product-name{
  font-weight: bold;
}
.product-info-list .product-size{
  color: #979797;
}
.product-info-list .product-price{
  color: #ff5e45;
}
.product-info-count{
  width: 200rpx;
  text-align: right;
}
.product-info-count .add-reduce{
  margin-top: 40rpx;
}
.product-info-count .add-reduce image,.product-info-count .add-reduce input{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.product-info-count .add-reduce input{
  display: inline-block;
  text-align: center;
  font-size: 32rpx;
}
.product-info-count image{
  width: 60rpx;
  height: 60rpx;
}
.total-price{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 30rpx;
  background: #fff;
}
.total-price .radio{
  padding-top: 20rpx;
}
.total-price .radio icon{
  vertical-align: middle;
  margin-right: 15rpx;
}
.total-price .total{
  padding-top: 8rpx;
  margin-right: 50rpx;
}
.total-price .total view{
  color: #ff5e45;
  font-weight: bold;
}
.total-price .total text{
  color: #333;
  font-size: 28rpx;
}
.total-price navigator{
  width: 200rpx;
  height: 100%;
  line-height: 90rpx;
  background: #ff5e45;
  color: #fff;
  text-align: center;
  font-size: 34rpx;
}

.nothing{
  width: 100%;
  text-align: center;
  padding-top: 35%;
}
.nothing image{
  width: 290rpx;
  height: 312rpx;
}
.nothing .hint{
  font-size: 30rpx;
  line-height: 100rpx;
  color: #a5a5a5;
}
.other-navigator-hover{
  color: #79e0d6;
}
/* pages/personalInfo/personalInfo.wxss */
.container .infolist{
  width: 100%;
  padding: 28rpx 15rpx 28rpx 40rpx;
  border-bottom: 1px solid #ddd;
  font-size: 30rpx;
  box-sizing: border-box;

}
.userinfo{
  line-height: 120rpx;
}
 .userinfo .slidepic{
  margin-top: 34rpx;
  margin-left: 10rpx;
} 
.userinfo-avatar{
  width:128rpx;
  height:128rpx;
  border-radius:50%;
  vertical-align:middle;
}
view .slidepic{
  width: 52rpx;
  height: 52rpx;
}
.infolist input{
  width: 420rpx;
  padding: 0 15rpx;
  text-align: right;
}
.infolist picker view{
  margin-right: 15rpx;
}
.container navigator{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  background: #79e0d6;
  text-align: center;
  font-size: 32rpx;
} 
/* pages/addAddress/addAddress.wxss */
.container{
  width: 100%;
  font-size: 32rpx;
  box-sizing: border-box;
}
.clearfix{
  padding: 0rpx 50rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #ddd;
}
.container input{
  width: 490rpx;
  margin-top: 20rpx;
  font-weight: bold;
  padding-left: 4rpx;
}
picker view{
  font-weight: bold;
}
.checkbox{
  padding-left: 50rpx;
  font-size: 28rpx;
}
.checkbox checkbox{
  transform: scale(0.7);
  -webkit-transform: scale(0.7);
}
.saveBtn{
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  text-align: center;
  background: #79e0d6;
}